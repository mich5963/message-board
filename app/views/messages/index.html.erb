<div class="panel panel-default">
    <div class="panel-heading">
        <h1>メッセージ一覧</h1>
    </div>
    <div class="panel-body">
        <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="col-ms-2">名前</th>
                    <th class="col-ms-1">年齢</th>
                    <th class="col-ms-8">内容</th>
                    <th class="col-ms-2">アクション</th>
                </tr>
            </thead>
            <tbody>
            <% @messages.each do |message| %>
                <tr>
                    <th><%= message.name %></th>
                    <td> <%= message.age %> 才 </td>
                    <td> <%= message.body %> </td>
                    <td><%= link_to "edit" , edit_message_path(message), class: "btn btn-info btn-sm" %>
                        <%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' }, class: "btn btn-warning btn-sm" %>    				   	</td>
                </tr>
            <% end %>
            </tbody>
        </table>
        </div>
    </div>
</div>
<%= render 'form' %>
